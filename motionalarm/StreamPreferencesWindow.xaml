<Window x:Class="motionalarm.StreamPreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Loaded="Window_Loaded"
        Title="Stream Preferences" Height="204" Width="203" Style="{StaticResource windowStyle}"
        WindowStyle="ToolWindow" ResizeMode="NoResize">    
    <Canvas x:Name="canvasRoot">
        <TextBox Canvas.Left="15" Canvas.Top="84" Height="23" Name="textBoxPortNo" Width="91" MaxLength="5" />
        <Label Canvas.Left="12" Canvas.Top="63" Content="Port:" Height="28" Name="label1" Foreground="White"/>
        <Label Canvas.Left="12" Canvas.Top="12" Content="Password:" Foreground="White" Height="28" Name="label2" />
        <Button Canvas.Left="55" Canvas.Top="124" Content="OK" Height="23" Name="buttonOk" Width="75" Click="buttonOk_Click"/>
        <TextBox Canvas.Left="12" Canvas.Top="34" Height="23" Name="textBoxPassword" Width="153" MaxLength="50" />
    </Canvas>
</Window>
