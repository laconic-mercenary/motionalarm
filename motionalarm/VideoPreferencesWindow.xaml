<Window x:Class="motionalarm.VideoPreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Loaded="Window_Loaded" 
        WindowStyle="ToolWindow" ResizeMode="NoResize"
        Title="Video Preferences" Height="189" Width="300" Style="{StaticResource windowStyle}">
    <Grid>
        <Label Content="Image Resolution" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" 
               Name="label1" VerticalAlignment="Top" Foreground="White" />
        <Label Content="Camera Device" Height="28" HorizontalAlignment="Left" Margin="12,53,0,0" 
               Name="label2" VerticalAlignment="Top" Foreground="White" />
        
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="120,17,0,0" 
                  Name="comboBoxResolution" VerticalAlignment="Top" Width="120" />
        
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="120,58,0,0" 
                  Name="comboBoxDevice" VerticalAlignment="Top" Width="120" />
        
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Click="button1_Click"
                Margin="100,106,0,0" Name="button1" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>
