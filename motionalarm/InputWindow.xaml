<Window x:Class="motionalarm.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputWindow" Height="166" Width="255" Style="{StaticResource windowStyle}"
        WindowStyle="ToolWindow" ResizeMode="NoResize" Closing="Window_Closing">
    <Canvas>
        <TextBox Canvas.Left="12" Canvas.Top="32" Height="48" MaxLength="200" Name="textBoxEntry" Width="209" />
        <Button Canvas.Left="12" Canvas.Top="92" Content="OK" Height="23" Name="buttonOk" Click="buttonOk_Click" Width="75" />
        <Button Canvas.Left="146" Canvas.Top="92" Content="Cancel" Height="23" Name="buttonCancel" Click="buttonCancel_Click" Width="75" />
        <Label Canvas.Left="14" Canvas.Top="8" Content="Enter a value:" Foreground="White" Height="28" Name="label1" />
    </Canvas>
</Window>
