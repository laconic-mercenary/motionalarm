<Window x:Class="motionalarm.SpeechPreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Style="{StaticResource windowStyle}"
        Title="Speech Preferences" Height="190" Width="281"
        Loaded="Window_Loaded" WindowStyle="ThreeDBorderWindow" ResizeMode="NoResize">
    <Grid>
        <Button Name="buttonOk" Width="100" Height="30" Margin="80,97,79,24" Content="OK" Click="buttonOk_Click"/>
        <Label Content="Select from the list of installed voices." Foreground="White" Height="28" 
               HorizontalAlignment="Left" Margin="12,0,0,0" Name="label1" VerticalAlignment="Top"/>        
        <CheckBox Content="Enable Speech" Height="16" HorizontalAlignment="Left" Margin="43,71,0,0" 
                  Name="checkBoxEnableSpeech" VerticalAlignment="Top" Foreground="White" IsChecked="True" />
        <ComboBox Height="27" Name="comboBoxVoices" Margin="29,34,27,90"></ComboBox>
    </Grid>
</Window>
